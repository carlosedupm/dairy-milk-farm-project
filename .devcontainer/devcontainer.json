{
  "name": "CeialMilk Development",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "ceialmilk-dev",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "mounts": [
    "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind",
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,readonly"
  ],
  "containerEnv": {
    "DATABASE_URL": "postgres://ceialmilk:password@db:5432/ceialmilk?sslmode=disable",
    "PORT": "8080"
  },
  "remoteEnv": {
    "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "GITHUB_REPO": "${localEnv:GITHUB_REPO}",
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-azuretools.vscode-docker",
        "cweijan.vscode-database-client2",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "github.copilot",
        "github.vscode-github-actions"
      ],
      "settings": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[go]": {
          "editor.defaultFormatter": "golang.go",
          "editor.formatOnSave": true
        },
        "go.useLanguageServer": true
      }
    }
  },
  "forwardPorts": [8080, 3000, 5432],
  "postCreateCommand": "go mod download -C backend && npm install --prefix frontend && chmod +x /workspace/scripts/devcontainer-post-start.sh",
  "remoteUser": "vscode"
}
